---
const today = new Date();
---

<footer>
  <section id="footer-svg"></section>
  <section id="data">
    <h2>&copy; {today.getFullYear()} Apricitine. All rights reserved.</h2>
  </section>
</footer>
<style lang="scss">
  footer {
    padding: 2%;
    text-align: center;
    color: white;
    text-shadow: 0 0 10px white;
    padding: 0;

    section#footer-svg {
      display: block;
      background-image: url("/svg/footer-layers.svg");
      aspect-ratio: 720/240;
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
    }

    section#data {
      width: 100%;
      height: 10vh;
      background: #871400;
    }
  }
</style>
